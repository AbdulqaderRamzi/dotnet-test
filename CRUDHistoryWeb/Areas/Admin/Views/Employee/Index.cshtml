@model List<Employee>

<h2 class="mb-2 text-gray-800">Employees Table</h2>
<p class="mb-4">
    DataTables is a third party plugin that is used to generate the demo table below.
    For more information about DataTables, please visit the
    <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.
</p>

<!-- DataTale -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Employees Data</h6>
            <a class="btn btn-secondary" asp-controller="Employee" asp-action="Upsert">
                <i class="fas fa-plus-circle"></i> Create employee
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Salary</th>
                    <th>Career</th>
                    <th>Email</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Salary</th>
                    <th>Career</th>
                    <th>Email</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
                </tfoot>
                <tbody>
                @foreach (var employee in Model){
                    <tr>
                        <td>@employee.Name</td>
                        <td>@employee.Salary</td>
                        <td>@employee.Career</td>
                        <td>@employee.Email</td>
                        <td>@employee.DateTime.ToString("MMM-dd-yy hh:mm tt")</td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button"
                                        id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                        aria-expanded="false">
                                    Actions
                                </button>
                                <div class="dropdown-menu animated--fade-in"
                                     aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#"
                                       onmouseover="this.style.backgroundColor='#f6a23e'; this.style.color='white';"
                                       onmouseout="this.style.backgroundColor=''; this.style.color='';">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                    <a class="dropdown-item " asp-controller="Employee" asp-action="Upsert" asp-route-id="@employee.Id"
                                       onmouseover="this.style.backgroundColor='#5cb85e'; this.style.color='white';"
                                       onmouseout="this.style.backgroundColor=''; this.style.color='';">
                                        <i class="fas fa-edit"></i> Update
                                    </a>
                                    <a class="dropdown-item" onclick="Delete('/admin/employee/delete?id=@employee.Id')"
                                       onmouseover="this.style.backgroundColor='#e74a3e'; this.style.color='white';"
                                       onmouseout="this.style.backgroundColor=''; this.style.color='';" style="cursor: pointer;">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        function Delete(url) {            
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                     window.location.href = url;
                }
            });
        }
    </script>
}
