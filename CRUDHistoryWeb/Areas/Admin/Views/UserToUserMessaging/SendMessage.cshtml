@model Message

<h2 class="text-center mb-4">Send a Message</h2>
<form method="POST" id="messageForm">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="form-group">
                <label asp-for="RecipientEmail" class="text-gray-800">Recipient Email</label>
                <input asp-for="RecipientEmail" class="form-control" placeholder="Enter recipient email" required>
                <span asp-validation-for="RecipientEmail" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Content" class="text-gray-800">Subject</label>
                <input asp-for="Content" class="form-control" placeholder="Enter subject" required>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Content" class="text-gray-800">Message Body</label>
                <textarea asp-for="Content"  class="form-control" rows="5" placeholder="Enter your message"></textarea>
                <span asp-validation-for="RecipientEmail" class="text-danger"></span>
                
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 mx-auto text-center">
            <button type="submit" class="btn btn-primary btn-lg" id="sendButton">
                <i class="fas fa-solid fa-paper-plane mr-2"></i> Send Message
            </button>
        </div>
    </div>
</form>
