    .content {
        margin-top: 70px;
    }
    .container {
        max-width: 1100px;
    }
    .card {
        height: 600px
    }
    .form-control-user {
        font-size: 1rem;
        border-radius: 10rem;
        padding: 1.5rem 1rem;
    }
    .btn-user {
        font-size: 0.8rem;
        border-radius: 10rem;
        padding: 1rem 1rem;
    }
     .img-fluid {
            object-fit: cover;
        }
